# Root editorconfig
root = true

# Default Rules (apply to all files)
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Java Backend Formatting
[*.java]
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

[*.xml]
indent_size = 2

[*.properties]
indent_size = 2

# Frontend (React / TypeScript)
[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.json]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# YAML / Docker
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[Dockerfile]
indent_size = 2

# Shell Scripts
[*.sh]
end_of_line = lf
indent_size = 2

# Windows Batch
[*.cmd]
end_of_line = crlf
