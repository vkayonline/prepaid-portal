# Backend - Spring Boot Environment Variables

# Server
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prepaid_wallet
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Wallet/Payments App
APP_ENV=dev
APP_LOG_LEVEL=INFO
APP_BASE_URL=http://localhost:9080

# JWT / Security
JWT_SECRET=change-this-secret-key
JWT_EXPIRY_MINUTES=60

# CORS (Frontend Origin)
CORS_ALLOWED_ORIGINS=http://localhost:9000

# External Services
KYC_SERVICE_URL=https://sandbox.kyc-provider.com/api
SMS_GATEWAY_URL=https://sms-gateway.example.com/send

# Backend - Optional Feature Toggles
ENABLE_KYC_MODULE=true
ENABLE_FEE_ENGINE=true
ENABLE_CARD_MANAGEMENT=true

###############################################################
# Frontend - Vite Environment Variables
# NOTE: Vite variables MUST start with: VITE_

# Backend API base URL
VITE_API_BASE_URL=/api

# App environment
VITE_APP_ENV=dev

# Google Analytics or similar (optional)
VITE_GA_ID=UA-XXXXXXX-X

###############################################################
# Docker Environment Overrides (Optional)

# Used in docker-compose or CI deployments
BACKEND_IMAGE=prepaid-backend:latest
FRONTEND_IMAGE=prepaid-frontend:latest

# Exposed Ports
BACKEND_PORT=9080
FRONTEND_PORT=9000
